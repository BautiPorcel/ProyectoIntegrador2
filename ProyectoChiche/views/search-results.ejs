<%- include("./partials/head") %>
<%- include("./partials/header") %>
	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Resultados de b√∫squeda</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<main>
			<% if(encontroResultados){%>
				<h1>Estos son los resultados de tu busqueda "<%= busqueda %>"</h1>
				<ul>
					<%for(let i = 0; i < resultados.length ; i++){%>
						<div class="col-12 col-sm-6 col-lg-3">
							<section class="product-box">
								<a href="/prod/products/<%= resultados[i].id%>">
									<figure class="product-box_image">
										<img src="<%=resultados[i].image %>" alt="cafetera moulinex">
									</figure>
									<article class="product-box_data">
										<h2><%=resultados[i].nombre%></h2>
										<p><%=resultados[i].descripcion%></p>
										<p><%=resultados[i].precio%></p>
										<p><%=resultados[i].commments%></p>
									</article>
								</a>
							</section>
						</div>
					<%}%>
				</ul>
				<%} else {%>
					<h1>No se encontro lo que buscas</h1>
				<%}%>
			</main>
			
		</div>
		<label for=""></label>

<%- include("./partials/footer") %>