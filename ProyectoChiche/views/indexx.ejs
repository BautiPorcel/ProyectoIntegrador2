
<%- include('./partials/head') %>
<%- include('./partials/header') %>
	<!-- Banner -->
	<div class="banner">
		

		<img src="/images/cazacasacas-banner.jpg" alt="">
	</div>
	<!-- /Banner -->
	

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Novedades</h2>
			</div>
			<!-- Show the "ultimos" products -->
			
			<div class="col-12 col-sm-6 col-lg-3">
				<%for (let i=0; i<productos.length; i++){%>
				<section class="product-box">
					<a href="/prod/products/<%= productos[i].id%>">
						<figure class="product-box_image">
							<img src="<%=productos[i].imgUrl %>" alt="cafetera moulinex">
						</figure>
						<article class="product-box_data">
							<h2><%=productos[i].nombre%></h2>
							<p><%=productos[i].descripcion%></p>
							<p><%=productos[i].precio%></p>
							<p><%=productos[i].commments%></p>
						</article>
					</a>
				</section>
				<%}%>
			</div>
	<!-- /Novedades -->
	<!-- Más comentados -->
