
<%- include('./partials/head') %>
<%- include('./partials/header') %>
	<!-- Banner -->
	<div class="banner">
		<img src="/ProyectoIntegrador2/ProyectoChiche/public/images/img-home-banner.jpg" alt="Banner de ofertas">
	</div>
	<!-- /Banner -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Novedades</h2>
			</div>
			<!-- Show the "ultimos" products -->
			
			<div class="col-12 col-sm-6 col-lg-3">
				<%for (i=0, i<data.length, i++){%>
				<section class="product-box">
					<a href="/products">
						<figure class="product-box_image">
							<img src="<%=data.productos[i].imgUrl %>" alt="cafetera moulinex">
						</figure>
						<article class="product-box_data">
							<h2><%=data.productos[i].nombre%></h2>
							<p><%=data.productos[i].descripcion%></p>
							<p><%=data.productos[i].commments%></p>
						</article>
					</a>
				</section>
				<%}%>
			</div>
	<!-- /Novedades -->
	<!-- Más comentados -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Más comentados</h2>
			</div>


<%- include('./partials/footer') %>
	