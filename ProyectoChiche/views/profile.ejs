<%- include("./partials/head") %>
<%- include("./partials/header") %>

	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src="<%=user.foto%>" alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title"><%=user.usuario%>
						<a href="/users/profile-edit">
							<i class="fas fa-cog"></i>
						</a>
					</h1>
					<a class="btn mt-3 ml-4" href="/headerLogueado">SEGUIR</a>
				</div>
				<div>
					<ul class="">
						<li>8 productos</li>
						<li>200 seguidores</li>
						<li>300 comentarios</li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Mis productos</h2>
			</div>
			<!-- Show mis productos -->

			<div class="col-12 col-sm-6 col-lg-3">
				<%for (let i=0; i<productos.length; i++){%>
				<section class="product-box">
					<a href="/prod/products">
						<figure class="product-box_image">
							<img src="<%=productos[i].imgUrl %>" alt="cafetera moulinex">
						</figure>
						<article class="product-box_data">
							<h2><%=productos[i].nombre%></h2>
							<p><%=productos[i].descripcion%></p>
							<p><%=productos[i].precio%></p>
							<p><%=productos[i].commments%></p>
						</article>
					</a>
				</section>
				<%}%>
			</div>

			<div class="col-12 col-sm-6 col-lg-3">
				<%for (let i=0; i<productos.length; i++){%>
				<section class="product-box">
					<a href="/prod/products">
						<figure class="product-box_image">
							<img src="<%=productos[i].imgUrl %>" alt="cafetera moulinex">
						</figure>
						<article class="product-box_data">
							<h2><%=productos[i].nombre%></h2>
							<p><%=productos[i].descripcion%></p>
							<p><%=productos[i].precio%></p>
							<p><%=productos[i].commments%></p>
						</article>
					</a>
				</section>
				<%}%>
			</div>
		
	<!-- /Mis productos -->

<%- include("./partials/footer") %>
	