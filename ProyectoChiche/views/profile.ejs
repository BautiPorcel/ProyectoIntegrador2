<%- include("./partials/head") %>
<%- include("./partials/header") %>

	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<!--<img src="" alt="foto de perfil" class="foto-perfil">-->
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title"><%=usuario.nombre%>
						<a href="/users/profile-edit">
							<i class="fas fa-cog"></i>
						</a>
					</h1>
					<a class="btn mt-3 ml-4" href="/users/profile/<%=usuario.id%>">SEGUIR</a>
				</div>
				<div>
					<ul class="">
						<% if (usuario.productos.length > 0) { %>
							<ul>
							  <li><%=usuario.productos.length%> productos</li>
						  <% } else { %>
							<p>No se han cargado productos todavia</p>
						  <% } %>
						<li>200 seguidores</li>
						<li>300 comentarios</li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Mis productos</h2>
			</div>
			<!-- Show mis productos -->
			<div class="col-12 col-sm-6 col-lg-3">
				<%for (let i=0; i<usuario.productos.length; i++){%>
					<section class="product-box">
						<a href="/prod/products/<%= usuario.productos[i].id%>">
							<figure class="product-box_image">
								<img src="<%=usuario.productos[i].image %>" alt="cafetera moulinex">
							</figure>
							<article class="product-box_data">
								<h2><%=usuario.productos[i].nombre%></h2>
								<p><%=usuario.productos[i].descripcion%></p>
								<p><%=usuario.productos[i].precio%></p>
								<p><%=usuario.productos[i].commments%></p>
							</article>
						</a>
					</section>
					<%}%>
			</div>

			<div class="col-12 col-sm-6 col-lg-3">
				
			</div>
		
	<!-- /Mis productos -->

<%- include("./partials/footer") %>
	