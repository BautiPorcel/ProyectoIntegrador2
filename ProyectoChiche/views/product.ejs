<%- include("./partials/head") %>
<%- include("./partials/header") %>

	<!-- product detail -->
	<div class="container products-wrapper">
		<div class="d-flex align-items-center">
			<h2 class="products-title"><%= producto.nombre %></h2> 
			<p class="product-detail-description">
				<a href="/prod/product-add">Agregar Producto</a>
			</p>
		</div>
		<div class="product-detail">
			<div class="row">
				<article class="col-12 col-lg-8 product-detail-info">
					<img src="<%=producto.image %>" alt="cafetera moulinex" class="product-detail-img">
					<p class="product-detail-description"><%= producto.descripcion %></p>
				</article>
				<div class="col-12 col-lg-4">
					<section class="comments">
						<article>
							<%for (let i=0; i<producto.length; i++){%>
							<img src="https://via.placeholder.com/35" alt="">
							<div class="data">
								<p class="user">
									<div>
									<a href="/users/profile/<%= producto[i].comments[0].user.id %>"><%= producto[i].comments[0].user.name %></a>
									</div>
								<%= producto[i].comments[0].comentario %></p>
							</div>
						<% } %>

					</section>
					<a href=""></a>
					<form class="form" action="/prod/products" method="get">
						<input class="form-input" type="text" value="" placeholder="Agregar comentario">
						<button type="submit" class="buy-now-button">AGREGAR COMENTARIO</button>
					</form>
					<hr>
				</div>
			</div>
		</div>
	</div>
	<!-- /product detail -->

<%- include("./partials/footer") %>	